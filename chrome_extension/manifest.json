{
  "manifest_version": 3,
  "name": "eBay Snipping Tool",
  "version": "1.3",
  "description": "Scrapes and watermarks Amazon and Walmart product data to streamline the eBay listing process.",
  "permissions": [
    "storage",
    "scripting",
    "tabs",
    "background"
  ],
  "host_permissions": [
    "https://www.ebay.com/sl/prelist/*",
    "https://www.ebay.com/lstng*",
    "https://www.amazon.com/*",
    "https://www.amazon.co.uk/*",
    "https://www.amazon.de/*",
    "https://www.amazon.ca/*",
    "https://www.amazon.com.au/*",
    "https://www.walmart.com/*",
    "https://www.walmart.ca/*",
    "https://gemini.google.com/*",
    "https://api.replicate.com/*",
    "https://cdn.jsdelivr.net/*",
    "https://script.google.com/*",
    "https://script.google.com/*",
    "https://www.dailyfindz.com/*",
    "http://localhost:8080/*",
    "https://ojxzssooylmydystjvdo.supabase.co/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "eBay Snipping Tool",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": [
        "*://www.amazon.com/*",
        "*://www.amazon.co.uk/*",
        "*://www.amazon.de/*",
        "*://www.amazon.ca/*",
        "*://www.amazon.com.au/*"
      ],
      "js": [
        "common/config.js",
        "common/performance.js",
        "common/storage.js",
        "common/ui.js",
        "common/analytics.js",
        "common/undo-manager.js",
        "common/editor-tools.js",
        "content_scripts/amazon_injector.js",
        "content_scripts/image_editor.js",
        "content_scripts/auto_order_executor.js"
      ],
      "css": [
        "ui/panel.css"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "*://www.walmart.com/*",
        "*://www.walmart.ca/*"
      ],
      "js": [
        "common/config.js",
        "common/performance.js",
        "common/storage.js",
        "common/ui.js",
        "common/analytics.js",
        "common/undo-manager.js",
        "common/editor-tools.js",
        "content_scripts/walmart_injector.js",
        "content_scripts/image_editor.js"
      ],
      "css": [
        "ui/panel.css"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "*://www.ebay.com/*/sell*",
        "*://www.ebay.com/sl/*",
        "*://www.ebay.com/lstng*"
      ],
      "js": [
        "common/config.js",
        "common/performance.js",
        "common/storage.js",
        "common/ui.js",
        "common/analytics.js",
        "src/automation-clean.js",
        "src/image-uploader.js",
        "src/item-filler.js",
        "content_scripts/ebay_lister.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "*://www.ebay.com/sh/ord*",
        "*://www.ebay.com/mesh/ord/details?*"
      ],
      "js": [
        "content_scripts/ebay_order_scraper.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "*://www.dailyfindz.com/*"
      ],
      "js": [
        "content_scripts/dailyfindz_automator.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "http://localhost:8080/*",
        "http://127.0.0.1:8080/*"
      ],
      "js": [
        "content_scripts/auth_sync.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "common/config.js",
        "common/performance.js",
        "common/message-handler.js",
        "common/storage.js",
        "common/ui.js",
        "common/analytics.js",
        "common/undo-manager.js",
        "common/editor-tools.js",
        "ui/panel.html",
        "ui/editor-popup.html",
        "ui/editor_frame.html",
        "ui/editor-popup.css",
        "common/editor_core.js",
        "assets/watermark.png",
        "assets/stickers/*",
        "src/image-uploader.js",
        "src/item-filler.js",
        "content_scripts/description_paster.js",
        "admin.html",
        "admin.css",
        "admin.js",
        "landing.html",
        "landing.css",
        "landing.js"
      ],
      "matches": [
        "*://*.amazon.com/*",
        "*://*.ebay.com/*",
        "*://*.walmart.com/*",
        "*://*.walmart.ca/*",
        "http://localhost:8080/*",
        "http://127.0.0.1:8080/*"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}